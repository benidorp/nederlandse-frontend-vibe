# Plaats dit bestand in public_html op je hosting (webroot)
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # Force non-www to root domain, preserve full path
  RewriteCond %{HTTP_HOST} ^www\.iaee\.eu$ [NC]
  RewriteRule ^(.*)$ https://iaee.eu/$1 [L,R=301]

  # If file or directory exists, serve it directly
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # Otherwise: route everything to index.html (client-side routing)
  RewriteRule ^ index.html [L]
</IfModule>

<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresByType text/html "access plus 0 seconds"
  ExpiresByType text/css "access plus 1 month"
  ExpiresByType application/javascript "access plus 1 month"
  ExpiresByType image/jpeg "access plus 1 month"
  ExpiresByType image/png "access plus 1 month"
  ExpiresByType image/svg+xml "access plus 1 month"
</IfModule>
