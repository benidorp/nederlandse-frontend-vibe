# Plaats dit bestand in public_html op je hosting (webroot)
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # Force non-www to root domain, preserve full path
  RewriteCond %{HTTP_HOST} ^www\.iaee\.eu$ [NC]
  RewriteRule ^(.*)$ https://iaee.eu/$1 [L,R=301]

  # 301 Redirect: Premium Domeinen naar nieuwe URL structuur
  RewriteRule ^premium-domeinnamen-kopen-hoge-autoriteit-seo-waarde$ /expireddomainnames/nl/premium-domeinnamen-kopen-hoge-autoriteit-seo-waarde [R=301,L]
  RewriteRule ^expireddomeinnamen/nl/premium-domeinnamen-kopen-hoge-autoriteit-seo-waarde$ /expireddomainnames/nl/premium-domeinnamen-kopen-hoge-autoriteit-seo-waarde [R=301,L]
  RewriteRule ^expireddomeinnamen/premium-domeinnamen-kopen-hoge-autoriteit-seo-waarde$ /expireddomainnames/nl/premium-domeinnamen-kopen-hoge-autoriteit-seo-waarde [R=301,L]

  # 301 Redirect: Premium Domeinen Juridische Documenten naar nieuwe URL structuur
  RewriteRule ^premium-domeinnamen-juridische-documenten$ /expireddomainnames/nl/premium-domeinnamen-juridische-documenten [R=301,L]
  RewriteRule ^expireddomeinnamen/nl/premium-domeinnamen-juridische-documenten$ /expireddomainnames/nl/premium-domeinnamen-juridische-documenten [R=301,L]
  RewriteRule ^expireddomeinnamen/premium-domeinnamen-juridische-documenten$ /expireddomainnames/nl/premium-domeinnamen-juridische-documenten [R=301,L]

  # GTranslate Pro: Allow PHP files and subdirectories
  # Let GTranslate handle language subdirectories (fr/, de/, nl/, etc.)
  RewriteCond %{REQUEST_URI} ^/[a-z]{2}/ [NC]
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteRule ^([a-z]{2})/(.*)$ gtranslate/gtranslate.php?glang=$1&url=$2 [L,QSA]

  # Allow GTranslate PHP files to be accessed
  RewriteCond %{REQUEST_URI} ^/gtranslate/
  RewriteRule ^ - [L]

  # If file or directory exists, serve it directly
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # Otherwise: route everything to index.html (client-side routing)
  RewriteRule ^ index.html [L]
</IfModule>

<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresByType text/html "access plus 0 seconds"
  ExpiresByType text/css "access plus 1 month"
  ExpiresByType application/javascript "access plus 1 month"
  ExpiresByType image/jpeg "access plus 1 month"
  ExpiresByType image/png "access plus 1 month"
  ExpiresByType image/svg+xml "access plus 1 month"
</IfModule>
